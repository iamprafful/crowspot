<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ShowHotspotActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/header" android:id="@+id/header"/>
    <fragment
        android:layout_below="@id/header"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.cardview.widget.CardView
        map:cardBackgroundColor="#DFC4C4C4"
        map:cardCornerRadius="30dp"
        map:cardElevation="0dp"
        android:layout_width="317dp"
        android:layout_height="175dp"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingTop="33dp"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">
                    <com.blure.complexview.ComplexView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:color="#19AC16"
                        app:radius="500dp"/>
                    <TextView
                        android:layout_marginTop="17dp"
                        android:fontFamily="@font/comfortaa400"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SAFE"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">
                    <com.blure.complexview.ComplexView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:color="#D3B30B"
                        app:radius="500dp"/>
                    <TextView
                        android:layout_marginTop="17dp"
                        android:fontFamily="@font/comfortaa400"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RISKY"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">
                    <com.blure.complexview.ComplexView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:color="#D84213"
                        app:radius="500dp"/>
                    <TextView
                        android:layout_marginTop="17dp"
                        android:fontFamily="@font/comfortaa400"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="THREAT"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:onClick="newHotspot"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/fab"
                android:layout_marginBottom="9dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
        
</RelativeLayout>
