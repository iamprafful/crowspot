<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:weightSum="11"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateHotspotActivity">
    <LinearLayout
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <include layout="@layout/header"/>
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B10F74"
            android:text="Create a new Hotspot"
            android:textSize="14sp"
            android:fontFamily="@font/comfortaa400"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_marginTop="18dp"
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2130B2"
            android:text="Kind of Threat"
            android:textSize="12sp"
            android:fontFamily="@font/comfortaa400"/>
        <TextView
            android:drawablePadding="18dp"
            android:drawableEnd="@drawable/radio"
            android:padding="10dp"
            android:background="@drawable/edit_text_design"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_alignParentTop="true"
            android:textColor="#2130B2"
            android:text="POLICE -> SARS"
            android:textSize="12sp"
            android:fontFamily="@font/comfortaa400"/>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="#2130B2"
        android:text="Seen at:"
        android:textSize="12sp"
        android:fontFamily="@font/comfortaa400"/>
    <LinearLayout
        android:padding="4dp"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/edit_text_design"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="18dp"
        android:layout_marginHorizontal="18dp">
        <ListView
            android:divider="@null"
            android:dividerHeight="0dp"
            android:id="@+id/addressList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:weightSum="5"
        android:layout_weight="5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <fragment
            android:layout_weight="4"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <Button
            android:id="@+id/shareHotspotBtn"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="shareHotspot"
            android:layout_weight="1"
            android:fontFamily="@font/comfortaa400"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="#D84213"
            android:layout_width="327dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:text="SHARE HOTSPOT >"/>
    </LinearLayout>

</LinearLayout>
